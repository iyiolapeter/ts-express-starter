{
  "name": "ts-express-starter",
  "version": "1.0.0",
  "description": "TS Express Starter",
  "main": "application/index.js",
  "scripts": {
    "start": "npm run build && npm run link && cross-env NODE_ENV=development node application/index.js",
    "start:staging": "npm run build && cross-env NODE_ENV=staging node application/index.js",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\" \"views/**/*.ejs\"",
    "lint": "tslint -p tsconfig.json",
    "fix": "tslint --fix -p tsconfig.json",
    "link": "link-module-alias",
    "preaudit": "npm run preinstall",
    "postaudit": "npm run postinstall",
    "postinstall": "link-module-alias",
    "preinstall": "command -v link-module-alias && link-module-alias clean || true",
    "expose": "bash bin/tunnel.sh",
    "nodemon": "nodemon"
  },
  "_moduleAliases": {
    "@models": "./application/models",
    "@controllers": "./application/controllers",
    "@core": "./application/core",
    "@libs": "./application/libs",
    "@config": "./application/config",
    "@connections": "./application/connections",
    "@routes": "./application/api/routes",
    "@api": "./application/api"
  },
  "_moduleAliasIgnoreWarning": true,
  "author": "Peter Iyiola",
  "license": "ISC",
  "devDependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/cls-hooked": "^4.3.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.0.1",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/kue": "^0.11.13",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.7.6",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.1",
    "@types/nodemailer": "^6.4.0",
    "@types/shortid": "0.0.29",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^7.0.0",
    "@types/validator": "^12.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "link-module-alias": "^1.2.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@typegoose/typegoose": "^6.4.0",
    "acorn": ">=5.7.4",
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "extend": ">=2.0.2",
    "handy-redis": "^1.8.0",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^8.5.1",
    "kue": "^0.11.6",
    "lodash": "^4.17.15",
    "minimist": ">=1.2.2",
    "mongoose": "^5.9.4",
    "morgan": "^1.9.1",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.4",
    "obscure-email": "^1.0.7",
    "openapi3-ts": "^1.3.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0",
    "shortid": "^2.2.15",
    "socket.io": "^2.3.0",
    "string-interpolation": "github:iyiolapeter/string-interpolation",
    "uuid": "^7.0.2",
    "validator": "^12.2.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  }
}
