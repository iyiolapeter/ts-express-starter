{
  "name": "ts-express-starter",
  "version": "1.0.0",
  "description": "TS Express Starter",
  "main": "application/index.js",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=development node application/index.js",
    "start:staging": "npm run build && cross-env NODE_ENV=staging node application/index.js",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\" \"views/**/*.ejs\"",
    "lint": "tslint -p tsconfig.json",
    "fix": "tslint --fix -p tsconfig.json",
    "postinstall": "link-module-alias",
    "preinstall": "command -v link-module-alias && link-module-alias clean || true",
    "expose": "bash bin/tunnel.sh",
    "nodemon": "nodemon"
  },
  "_moduleAliases": {
    "@root": "./",
    "@models": "./application/models",
    "@controllers": "./application/controllers",
    "@core": "./application/core",
    "@libs": "./application/libs",
    "@config": "./application/config",
    "@connections": "./application/connections",
    "@routes": "./application/api/routes",
    "@api": "./application/api"
  },
  "_moduleAliasIgnoreWarning": true,
  "author": "Peter Iyiola",
  "license": "ISC",
  "devDependencies": {
    "@types/bluebird": "^3.5.28",
    "@types/cls-hooked": "^4.3.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/ejs": "^2.6.3",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/kue": "^0.11.13",
    "@types/lodash": "^4.14.144",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.12",
    "@types/nodemailer": "^6.2.1",
    "@types/shortid": "0.0.29",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.11.3",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "link-module-alias": "^1.2.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.3",
    "prettier": "^1.17.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "cross-env": "^5.2.1",
    "dotenv": "^8.1.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "handy-redis": "^1.6.2",
    "helmet": "^3.21.1",
    "jsonwebtoken": "^8.5.1",
    "kue": "^0.11.6",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "mysql2": "^1.7.0",
    "nodemailer": "^6.3.1",
    "obscure-email": "^1.0.7",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.1",
    "sequelize-typescript": "^1.0.0",
    "shortid": "^2.2.15",
    "socket.io": "^2.3.0",
    "string-interpolation": "github:iyiolapeter/string-interpolation",
    "typegoose": "github:iyiolapeter/typegoose",
    "uuid": "^3.3.3",
    "validator": "^11.1.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  }
}
